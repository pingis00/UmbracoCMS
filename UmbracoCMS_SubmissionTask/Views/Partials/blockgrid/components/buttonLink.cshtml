@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;
@using UmbracoCMS_SubmissionTask.Views.Helpers

@{
    var buttonLinkText = Model?.Content.Value<string>("buttonLinkText");
    var buttonLinkUrl = Model?.Content.Value<string>("buttonLinkUrl");

    var buttonLinkColor = Model?.Content?.Value<ColorPickerValueConverter.PickedColor>("buttonLinkColor")?.Label.ToLower() ?? null;   
    var buttonColorClass = (!string.IsNullOrEmpty(buttonLinkColor) && buttonLinkColor != "none") ? $"custom-btn-{buttonLinkColor}" : "btn";
    var responsiveMargin = ResponsiveMarginHelper.GetResponsiveMarginClasses(Model!);
}

@if(!string.IsNullOrEmpty(buttonLinkColor))
{
    <a href="@buttonLinkUrl" title="@buttonLinkText" class="button @buttonColorClass @responsiveMargin">@buttonLinkText</a>
}
else 
{
    <a href="@buttonLinkUrl" title="@buttonLinkText" class="btn @responsiveMargin">@buttonLinkText</a>
}